<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/lay">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check For Vulnerable"
        android:id="@+id/buttondownload"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parse "
        android:id="@+id/button"

        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttondownload"
        android:layout_alignStart="@+id/buttondownload"
        android:layout_alignRight="@+id/buttondownload"
        android:layout_alignEnd="@+id/buttondownload" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_marginTop="71dp"
        android:layout_alignRight="@+id/buttondownload"
        android:layout_alignEnd="@+id/buttondownload"
        android:layout_alignLeft="@+id/buttondownload"
        android:layout_alignStart="@+id/buttondownload" />

</RelativeLayout>
